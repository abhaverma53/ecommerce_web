<% if current_vendor.present? %>
  <h1><%= current_vendor.email %>'s Store</h1>

  <% if @vendor_products.present? %>
  <%byebug%>
  <ul>
      <li>
        <%= product.title %> - <%= product.price %> - <%= image_tag product.image, class: 'product-image' %>
        <%= link_to "View", vendor_path(@vendor) %>
      </li>
  </ul>
<% else %>
  <p>No products available for this vendor.</p>
<% end %>

  <%= link_to 'Back to Products', products_path %>
  <%= button_to 'Log Out', destroy_user_session_path, method: :delete %>
  <%= link_to "Add Product", new_vendor_product_path %>
<% else %>
  <%= link_to 'Back to Home', root_path %>
<% end %>
